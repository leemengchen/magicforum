<div class="topic">

  <div class="topic_head text-center">
  <h1>Topics</h1>
  </div>

<div id="topics">
  <div class= "topic_big_container">
  <% @topics.each do |topic| %>
    <%= render partial: "topic", locals: { topic: topic} %>
    <% end %>
  </div>
</div>

  <div class="paginate text-center" >
    <%= paginate @topics, :window => 2 %>
  </div>

  <div class= "create_new_topic text-center">
    <%= render partial: "topic_create_form", locals: { topic: @topic} %>
  </div>

</div>
